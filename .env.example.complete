# Complete Environment Variables for Connect Four AI
# ==================================================

# Backend Server Configuration
PORT=3000
BACKEND_PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/connect4

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_INFERENCE_URL=http://localhost:8001
ML_WEBSOCKET_URL=ws://localhost:8002/ws
ML_SERVICE_TIMEOUT=30000

# AI Coordination Configuration
AI_COORDINATION_URL=http://localhost:8003
PYTHON_TRAINER_URL=http://localhost:8004

# Continuous Learning Features
ENABLE_CONTINUOUS_LEARNING=true
ENABLE_PATTERN_DEFENSE=true
ENABLE_LEARNING_MONITOR=true
ENABLE_COORDINATION_BRIDGE=true

# Difficulty-Aware Learning Features
ENABLE_DIFFICULTY_AWARE_LEARNING=true
DIFFICULTY_MODELS_COUNT=10
PATTERN_TRANSFER_ENABLED=true
CROSS_LEVEL_INSIGHTS=true

# Pattern Transfer Configuration
TRANSFER_DECAY_RATE=0.05
DOWNWARD_TRANSFER_LIMIT=0.3
MIN_TRANSFER_CONFIDENCE=0.3

# Learning Buffer Configuration
BUFFER_CAPACITY=100000
CAPACITY_PER_LEVEL=10000
PATTERN_FOCUS_WEIGHT=1.5

# Model Update Configuration
UPDATE_FREQUENCY=100
MIN_GAMES_FOR_UPDATE=50
VALIDATION_THRESHOLD=0.95

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=1d

# Logging Configuration
LOG_LEVEL=info
ENABLE_AI_METRICS=true

# Performance Settings
MAX_CONCURRENT_GAMES=100
AI_RESPONSE_TIMEOUT=10000
CACHE_TTL=300000

# Feature Flags
FAST_MODE=false
SKIP_ML_INIT=false

# Multi-Model Ensemble Configuration
ENSEMBLE_PREDICTION_ENABLED=true
ENSEMBLE_WEIGHT_ADAPTIVE=true
MODEL_WARMUP_ON_START=true

# Pattern Defense Configuration
PATTERN_DEFENSE_PRIORITY=high
CRITICAL_POSITION_ANALYSIS=true
DEFENSIVE_MOVE_LOOKAHEAD=3

# Cross-Level Learning
ENABLE_UPWARD_TRANSFER=true
ENABLE_DOWNWARD_TRANSFER=true
TRANSFER_LEARNING_BATCH_SIZE=64

# Monitoring and Metrics
PROMETHEUS_ENABLED=false
METRICS_RETENTION_DAYS=30
PERFORMANCE_TRACKING=true

# Development Settings
DEBUG_PATTERN_ANALYSIS=false
LOG_DIFFICULTY_TRANSFERS=true
VERBOSE_LEARNING_LOGS=false