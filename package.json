{
    "name": "connect-four-monorepo",
    "private": true,
    "scripts": {
        "start:backend": "cd backend && npm install && npm run start:dev",
        "start:frontend": "cd frontend && npm install && npm run start",
        "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "kill-port": "./kill-port.sh",
        "dev:kill": "npm run kill-port -- 3000 3002"
    },
    "dependencies": {
        "react-scripts": "^5.0.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@types/socket.io-client": "^1.4.36"
    }
}
